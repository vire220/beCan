<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mru.becan.QuizActivity">

    <TextView
        android:id="@+id/textView-quiz-title"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="304dp"
        android:layout_height="53dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout-quiz"
        android:layout_width="345dp"
        android:layout_height="249dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="140dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button-answer-1"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:text="Button" />

        <Button
            android:id="@+id/button-answer-2"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:text="Button" />

        <Button
            android:id="@+id/button-answer-3"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:text="Button" />

        <Button
            android:id="@+id/button-answer-4"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:text="Button" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView-quiz-question"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="340dp"
        android:layout_height="57dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:text="question"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout-quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView-quiz-title"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView-quiz-progressBar"
        android:layout_width="189dp"
        android:layout_height="195dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/becanlogo" />

</android.support.constraint.ConstraintLayout>
